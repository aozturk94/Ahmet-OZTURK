@model Route


@if (Model != null)
{


<div style="margin: 5rem">

    @Model.StartLocation <i class="fas fa-long-arrow-alt-right"></i> @Model.EndLocation
    <p class=""><b style="font-size:19px;">Güzergah: </b>  @Model.StartLocation > @Model.FirstStation > @Model.SecondStation > @Model.ThirdStation > @Model.EndLocation</p><br />

    <p>
        <b>@Model.Date </b>
        - @Model.Time
    </p>
    <a asp-controller="Ticket" asp-action="Details" asp-route-id="@Model.RouteId" class="btn btn-primary btn-sm">Book Ticket</a>





</div>

}
else
{
    <h2>Hoopp</h2>
}





